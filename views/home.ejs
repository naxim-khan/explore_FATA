<%- include('partials/header') %>

    <!-- ====== SHOWCASE START ===========  -->
    <main>
        <div class="slider-container swiper ">
            <div class="slide-content swiper-wrapper">
                <% places.forEach(place=> { %>
                    <div class="overlay swiper-slide">
                        <img src="<%=place.image%>" alt="<%= place.image %>">
                        <div class="img-overlay">
                            <p>Lets Explore FATA</p>
                            <h2><span>District</span>
                                <%= place.name %>
                            </h2>
                            <h3>
                                <%= place.description %>
                            </h3>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </main>
    <!-- ====== SHOWCASE End ===========  -->

    <!-- ===== Search Location ========== -->
    <section id="location-search">
        <div class="container">
            <div class="form-wrapper">
                <form id="search-form" action="/district" method="GET">
                    <!-- Search Input -->
                    <input class="form-container" type="text" placeholder="Where to?" id="search-input" name="search">

                    <!-- District Dropdown -->
                    <select class="form-control" id="district-select" name="district">
                        <option value="">Select a District</option>
                        <% places.forEach(place=> { %>
                            <option value="<%= place.name %>">
                                <%= place.name %>
                            </option>
                            <% }); %>
                    </select>

                    <!-- Region Dropdown -->
                    <!-- <select class="form-control" id="region-select" name="region">
                    <option  value="">Select a Region</option>
                </select> -->

                    <!-- Search Button -->
                    <button type="submit" class="primary-btn">Search Now</button>
                </form>
            </div>
        </div>
    </section>
    <!-- ===== Search Location End========== -->



    <!-- ===== About ========== -->
