<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAYx1t41Tpk35TFCp71JyeNAfyJJAszZ7Y&callback=initMap&libraries=places&v=weekly" async defer></script>
<script>
  function initMap() {
    const lat = parseFloat("<%= region.lat %>");
    const lng = parseFloat("<%= region.lng %>");
    console.log(lat, lng);
    const mapOptions = {
      center: { lat:lat, lng: lng }, // Center location
      zoom: 13,
    };
    const map = new google.maps.Map(document.getElementById('map'), mapOptions);
    
    // Create a marker at the center
    new google.maps.Marker({
      position: mapOptions.center,
      map: map,
      title: 'Center Location',
    });

    // Create a PlacesService instance
    const service = new google.maps.places.PlacesService(map);

    // Define icons URLs
    const hospitalicons = 'https://maps.google.com/mapfiles/ms/iconss/hospital.png';
    const hotelicons = 'https://maps.google.com/mapfiles/ms/iconss/lodging.png';

    // Search for hospitals
    service.nearbySearch({
      location: mapOptions.center,
      radius: 5000, // Search within 5 km radius
      type: 'hospital'
    }, (results, status) => {
      if (status === google.maps.places.PlacesServiceStatus.OK) {
        for (let i = 0; i < results.length; i++) {
          const place = results[i];
          new google.maps.Marker({
            position: place.geometry.location,
            map: map,
            title: place.name,
            icons: hospitalicons,
          });
        }
      } else {
        console.error('Failed to load hospitals: ' + status);
      }
    });

    // Search for hotels
    service.nearbySearch({
      location: mapOptions.center,
      radius: 3000, // Search within 5 km radius
      type: 'lodging'
    }, (results, status) => {
      if (status === google.maps.places.PlacesServiceStatus.OK) {
        for (let i = 0; i < results.length; i++) {
          const place = results[i];
          new google.maps.Marker({
            position: place.geometry.location,
            map: map,
            title: place.name,
            icons: hotelicons,
          });
        }
      } else {
        console.error('Failed to load hotels: ' + status);
      }
    });
  }
</script>